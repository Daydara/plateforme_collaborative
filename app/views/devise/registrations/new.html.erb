<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true %>
    <br>
    <%= f.label :phone %>
    <%= f.text_field :phone, autofocus: true %>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true %>
    <br>
    <%= f.label :city %>
    <%= f.text_field :city, autofocus: true %>
    <br>
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, autofocus: true %>
    <br>
    <%= f.label :category %>
    <%= f.select(:category, [['Grower', 'grower'], ['Gardner', 'gardner'], ['Individual', 'individual'], ['Professional', 'professional'], ['Other', 'other']]) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
